<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>Snowflake Generator</Title>
    <Authors>Pedro Cavaleiro</Authors>
    <Description>Generates Snowlakes ID</Description>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <Copyright>Pedro Cavaleiro © 2025</Copyright>
    <PackageProjectUrl>https://github.com/PedroCavaleiro/Sharpflake</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PedroCavaleiro/Sharpflake</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryType>git</RepositoryType>
    <PackageTags>snowflake</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <None Include="../README.md" Pack="true" PackagePath="." />
    <None Include="../LICENSE" Pack="true" PackagePath="." />
  </ItemGroup>

</Project>
